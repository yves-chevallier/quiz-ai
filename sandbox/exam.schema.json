{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/quiz.schema.json",
  "title": "Quiz Schema",
  "type": "object",
  "required": ["schema_version", "meta", "questions"],
  "properties": {
    "schema_version": { "type": "string", "pattern": "^1\\.[0-9]+$" },
    "meta": {
      "type": "object",
      "required": ["title", "author", "date"],
      "properties": {
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "code": { "type": "string" },
        "author": { "type": "string" },
        "department": { "type": "string" },
        "school": { "type": "string" },
        "date": { "type": "string" },
        "locale": { "type": "string", "default": "fr-CH" },
        "python_version": { "type": "string", "default": "3.10" },
        "time_limit_min": { "type": "integer", "minimum": 0 },
        "directives": {
          "type": "array",
          "items": { "type": "string" }
        },
        "randomization": {
          "type": "object",
          "properties": {
            "shuffle_questions": { "type": "boolean", "default": false },
            "shuffle_choices": { "type": "boolean", "default": true }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/question" }
    }
  },
  "$defs": {
    "gradingOptions": {
      "type": "object",
      "properties": {
        "points": { "type": "number", "minimum": 0 },
        "partial_credit": {
          "type": "string",
          "enum": ["none", "proportional", "mcq_strict", "mcq_penalize_wrong"],
          "default": "none"
        },
        "penalty_per_wrong": { "type": "number", "minimum": 0, "default": 0 }
      },
      "required": ["points"],
      "additionalProperties": false
    },
    "textCheckOptions": {
      "type": "object",
      "properties": {
        "case_sensitive": { "type": "boolean", "default": false },
        "strip": { "type": "boolean", "default": true },
        "normalize_spaces": { "type": "boolean", "default": true },
        "accept_regex": { "type": "boolean", "default": false },
        "accepted_answers": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "baseQuestion": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "type": "string" },
        "question": { "type": "string" },  // Markdown/LaTeX permis
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "grading": { "$ref": "#/$defs/gradingOptions" }
      },
      "required": ["type", "question", "grading"],
      "additionalProperties": false
    },
    "question": {
      "oneOf": [
        { "$ref": "#/$defs/mcq" },
        { "$ref": "#/$defs/shortAnswer" },
        { "$ref": "#/$defs/fillInTheBlank" },
        { "$ref": "#/$defs/multipleFillIn" }
      ]
    },
    "mcq": {
      "allOf": [
        { "$ref": "#/$defs/baseQuestion" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "multiple_choice" },
            "choices": {
              "type": "array",
              "minItems": 2,
              "items": { "type": "string" }
            },
            "correct_choices": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "integer", "minimum": 1 }
            },
            "allow_multiple": { "type": "boolean", "default": false },
            "shuffle_choices": { "type": "boolean" }
          },
          "required": ["choices", "correct_choices"]
        }
      ]
    },
    "shortAnswer": {
      "allOf": [
        { "$ref": "#/$defs/baseQuestion" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "short_answer" },
            "answer": { "type": "string" },
            "text_check": { "$ref": "#/$defs/textCheckOptions" }
          },
          "required": ["answer"]
        }
      ]
    },
    "fillInTheBlank": {
      "allOf": [
        { "$ref": "#/$defs/baseQuestion" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "fill_in_the_blank" },
            "template": {
              "type": "string"
              /* Exemple: "Le langage {{Python}} est {{cool}}." */
            },
            "answers": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            },
            "text_check": { "$ref": "#/$defs/textCheckOptions" },
            "fill_width": { "oneOf": [ { "type": "integer", "minimum": 1 }, { "const": "adaptive" } ] }
          },
          "required": ["template"]
        }
      ]
    },
    "multipleFillIn": {
      "allOf": [
        { "$ref": "#/$defs/baseQuestion" },
        {
          "type": "object",
          "properties": {
            "type": { "const": "multiple_fill_in" },
            "items": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["prompt", "answer"],
                "properties": {
                  "prompt": { "type": "string" },  // markdown autoris√©
                  "answer": { "type": "string" }
                },
                "additionalProperties": false
              }
            },
            "text_check": { "$ref": "#/$defs/textCheckOptions" },
            "fill_width": { "oneOf": [ { "type": "integer", "minimum": 1 }, { "const": "adaptive" } ] }
          },
          "required": ["items"]
        }
      ]
    }
  }
}
